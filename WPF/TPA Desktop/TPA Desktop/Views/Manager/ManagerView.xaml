<Window x:Class="TPA_Desktop.Views.Manager.ManagerView"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:TPA_Desktop.Views"
        mc:Ignorable="d"
        Title="Manager" Height="500" Width="525"
        WindowStartupLocation="CenterScreen"
        Background="LightBlue">
    <Border Padding="10">
        <StackPanel>
            <Frame x:Name="Biodata"></Frame>
            <TextBlock Margin="10">View</TextBlock>
            <Button x:Name="viewIdeaRequestBtn" Margin="5" Click="viewIdeaRequestBtn_Click">View Idea Request</Button>
            <Button x:Name="viewIncomeBtn" Margin="5" Click="viewIncomeBtn_Click">View Income</Button>
            <Button x:Name="viewResignRequestBtn" Margin="5" Click="viewResignRequestBtn_Click">View Employee Resign Request</Button>
            <Button x:Name="viewHRRequestBtn" Margin="5" Click="viewHRRequestBtn_Click">View Human Resource Request</Button>
        </StackPanel>
    </Border>
</Window>
